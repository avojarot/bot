#!/bin/bash

# Перевірка наявності необхідних аргументів
if [ "$#" -lt 2 ]; then
  echo "Usage: $0 <namespace> <resource_type>"
  exit 1
fi

NAMESPACE=$1
RESOURCE_TYPE=$2

# Отримання статистики використання ресурсів з Kubernetes
kubectl top $RESOURCE_TYPE -n $NAMESPACE --no-headers | while read line; do
  # Витягнення CPU та пам'яті з виходу
  NAME=$(echo $line | awk '{print $1}')
  CPU=$(echo $line | awk '{print $2}')
  MEMORY=$(echo $line | awk '{print $3}')

  # Виведення статистики у форматі "Resource, Namespace, Name, CPU, Memory"
  echo "$RESOURCE_TYPE, $NAMESPACE, $NAME, $CPU, $MEMORY"
done
